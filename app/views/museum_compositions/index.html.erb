<h1><%= @museum.name %></h1>
<% @compositions.each do |composition| %>
  <p>
    <b>Piece:</b>
    <%= composition.name %></p>
  <p>
    <b>Artist:</b>
    <%= composition.artist %></p>
  <p>
    <b>On Display?:
    </b><%= composition.on_display %></p>
  <p>
    <b>Year Made:
    </b><%= composition.year_made %></p>
  <p>
  <%= link_to 'Delete Composition', "/compositions/#{composition.id}", method: :delete %></p>
  <br>
<% end %>
<%= link_to 'Sort Alphabetically by Name', "/museums/#{@museum.id}/compositions?order=alpha" %>
<br>
<%= link_to 'New Composition', "/museums/#{@museum.id}/compositions/new" %>
